#!/bin/bash
# comando "switchshow"

PATH="/usr/lib64/qt-3.3/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin:/home/dcastelob/.local/bin:/home/dcastelob/bin"

source includes/conf/options.conf

CFG_FILE="includes/var/cfgs.db"
ZONE_FILE="includes/var/zones.db"
ALIAS_FILE="includes/var/alias.db"
PORTS_FILE="includes/var/ports.db"
DEFZONE_FILE="includes/var/defzones.db"

ENTIDADE="Alias"

function consulte()
{
	ITEM="$1"
	FILE="$2"
	EXISTE=""
	EXISTE=$(cat "$FILE" | grep "$ITEM -")
	if [ -z "$EXISTE" ];then
		echo 0
	else
		echo 1	
	fi
}

function consulte2()
{
	ITEM="$1"
	FILE="$2"
	EXISTE=""
	EXISTE=$(cat "$FILE" | grep "$ITEM")
	if [ -z "$EXISTE" ];then
		echo 0
	else
		echo 1	
	fi
}

function listAll()
{
	# A variavel $AUTO_LIST de controle está presente no arquivo conf/options.conf
	# controlando exibição automatica após atualizações
	if [ "$1" == "--auto" ]; then
		VAR=$(echo "$AUTO_LIST" | tr [a-z] [A-Z])
		case "$VAR" in
			Y|YES|S|SIM)
				continue
				;;
			N|NO|NAO|NÃO)
				return 1
				;;
			*)
				return 2
				;;
		esac
	fi
	
#	echo "============================================================================="
#	echo " List - All $ENTIDADE"
#	echo "============================================================================="
	DADOS=$(cat "$ALIAS_FILE")
	if [ -n "$DADOS" ];then
		cat "$ALIAS_FILE" | sed 's/-/\t-\t/g'
	else
		echo "Data not found!"	
	fi
	
}


function insert()
{
	ALIAS_NAME="$1"
	WWPN="$2"
	
	EXISTE1=""
	EXISTE2=""
	
	EXISTE1=$(consulte "$ALIAS_NAME" "$ALIAS_FILE")
	EXISTE2=$(consulte2 "$WWPN" "$PORTS_FILE")
	
	if [ "$EXISTE1" -eq 0 ] && [ "$EXISTE2" -eq 1 ] ;then
		echo "$ALIAS_NAME - $WWPN" >> "$ALIAS_FILE"
		echo "Alias \"$ALIAS_NAME\" created."
		listAll "--auto"
	else
		echo "Could not create Alias. Check the <Alias Name> or <Port> informed"
		#echo "Alias $ALIAS_NAME já existe."	
	fi
}


function delete()
{
	ALIAS_NAME="$1"
	EXISTE=""
	EXISTE=$(consulte "$ALIAS_NAME" "$ALIAS_FILE")
	if [ "$EXISTE" -eq 0 ];then
		echo "Alias \"$ALIAS_NAME\" not found!"
	else 
		cat "$ALIAS_FILE" | grep -v "$ALIAS_NAME - " > temp
		cat "temp" > "$ALIAS_FILE"
		rm -f temp
		echo "Alias \"$ALIAS_NAME\" has deleted."
		listAll "--auto"
	fi
}


function rename()
{
	ALIAS_NAME="$1"
	NEW_ALIAS_NAME="$2"
	EXISTE=""
	EXISTE=$(consulte "$ALIAS_NAME" "$ALIAS_FILE")
	if [ "$EXISTE" -eq 0 ];then
		echo "Alias \"$ALIAS_NAME\" not found!"
	else 
		EXISTE=""
		EXISTE=$(consulte "$NEW_ALIAS_NAME" "$ALIAS_FILE")
		if [ "$EXISTE" -eq 0 ];then
			NOVO=$(cat "$ALIAS_FILE" | grep "$ALIAS_NAME - "| sed "s/$ALIAS_NAME/$NEW_ALIAS_NAME/" )
			cat "$ALIAS_FILE" | grep -v "$ALIAS_NAME - " > temp
			cat "temp" > "$ALIAS_FILE"
			echo "$NOVO" >> "$ALIAS_FILE"
			listAll "--auto"
		else 
			echo "Alias \"$NEW_ALIAS_NAME\" already exists."
		fi		
	fi
}


function copy()
{
	ALIAS_NAME="$1"
	NEW_ALIAS_NAME="$2"
	EXISTE=""
	EXISTE=$(consulte "$ALIAS_NAME" "$ALIAS_FILE")
	if [ "$EXISTE" -eq 0 ];then
		echo "Alias \"$ALIAS_NAME\" not found!"
		return 0
	else 
		EXISTE=""
		EXISTE=$(consulte "$NEW_ALIAS_NAME" "$ALIAS_FILE")
		if [ "$EXISTE" -eq 0 ];then
			NOVO=$(cat "$ALIAS_FILE" | grep "$ALIAS_NAME - "| sed "s/$ALIAS_NAME/$NEW_ALIAS_NAME/" )

			echo "$NOVO" >> "$ALIAS_FILE"
			listAll "--auto"
		else 
			echo "Alias \"$NEW_ALIAS_NAME\" already exists."
		fi
		
	fi
}

OP=$(echo "chamada- $0"| cut -d"/" -f4)
#echo "Opção: $OP"  ## DEBUG

case "$OP" in
	alicreate)
		if [ "$#" -lt 2 ]; then
			echo "Sintaxe error: $OP <ALIAS NAME> <WWPN>"
		else
			insert "$1" "$2"
		fi	
		;;
	alishow)
		listAll "$1"
		;;
	
	alidelete)
		if [ "$#" -lt 1 ]; then
			echo "Sintaxe error: $OP <ALIAS NAME>"
		else
			delete "$1"
		fi	
		;;
	alirename)
		if [ "$#" -lt 2 ]; then
			echo "Sintaxe error: $OP <ALIAS NAME> <NEW ALIAS NAME>"
		else
			rename "$1" "$2"
		fi	
		;;
	alicopy)
		if [ "$#" -lt 2 ]; then
			echo "Sintaxe error: $OP <ALIAS NAME> <NEW ALIAS NAME>"
		else
			copy "$1" "$2"
		fi	
		;;
	*)
		echo "Not implemented!"	
	;;
esac


